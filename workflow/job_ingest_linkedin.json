{
  "name": "Job Ingest - LinkedIn (via job-fetcher)",
  "nodes": [
    {
      "id": "webhook",
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 2,
      "position": [0, 0],
      "webhookId": "job-ingest",
      "parameters": {
        "path": "job/ingest",
        "httpMethod": "POST",
        "responseMode": "lastNode",
        "options": {}
