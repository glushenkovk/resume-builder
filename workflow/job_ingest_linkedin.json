    },
    {
      "id": "normalizeUrl",
      "name": "Normalize URL",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [220, 0],
      "parameters": {
        "jsCode": "// Normalize LinkedIn job URL\nconst rawUrl = $json.body?.jobUrl || $json.jobUrl || '';\n\nif (!rawUrl || typeof rawUrl !== 'string') {\n  throw new Error('Missing or invalid jobUrl in request body');\n}\n\n// Parse URL\nlet url;\ntry {\n  const urlStr = rawUrl.trim();\n  url = new URL(urlStr.startsWith('http') ? urlStr : `https://${urlStr}`);\n} catch (e) {\n  throw new Error('Invalid URL format');\n}\n\n// Validate LinkedIn domain\nconst hostname = url.hostname.toLowerCase();\nif (!hostname.includes('linkedin.com')) {\n  throw new Error('URL must be a LinkedIn job URL');\n}\n\n// Extract job ID\nconst pathMatch = url.pathname.match(/\\/jobs\\/view\\/(\\d+)/);\nif (!pathMatch || !pathMatch[1]) {\n  throw new Error('Could not extract job ID from URL. Expected format: linkedin.com/jobs/view/<jobId>');\n}\n\nconst jobId = pathMatch[1];\nconst jobUrl = `https://www.linkedin.com/jobs/view/${jobId}/`;\n\nreturn [{\n  json: {\n    jobUrl,\n    jobId\n  }\n}];"
      }
    },
    {
      "id": "callJobFetcher",
      "name": "Call job-fetcher",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [440, 0],
      "parameters": {
        "method": "POST",
        "url": "http://job-fetcher:3000/fetch",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"url\": \"{{ $json.jobUrl }}\",\n  \"options\": { \"timeoutMs\": 45000 }\n}",
        "options": {
          "timeout": 60000
        }
      }
    },
    {
      "id": "checkSuccess",
