        "jsonOutput": "={\n  \"source\": \"linkedin\",\n  \"blocked\": false,\n  \"jobId\": \"{{ $json.jobId }}\",\n  \"jobUrl\": \"{{ $json.canonicalUrl }}\",\n  \"title\": {{ JSON.stringify($json.title || '') }},\n  \"company\": {{ JSON.stringify($json.company || '') }},\n  \"location\": {{ JSON.stringify($json.location || '') }},\n  \"descriptionText\": {{ JSON.stringify($json.descriptionText || '') }},\n  \"applyUrl\": {{ JSON.stringify($json.applyUrl || null) }}\n}",
        "options": {}
